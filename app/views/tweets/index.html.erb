<p id="notice"><%= notice %></p>
<div class="title-container">
  <h1>Tweets</h1>
</div>

<div class="tweets">
  <dl>
    <% @tweets.each do |tweet| %>
      <div class='tweet">
        <div class="thumbnail">
          <div class="cpation">
          <%user = @users_map[tweet.user_id]%>
            <dt><h4><%=link_to user.username, user_path(user) %></h4></dt>
            <dd><p><%=truncate(tweet.content)%></p></dd>
            <p>
            <%if current_user.id == user.id %>
              <td><%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-default" %></td>
              <td><%= link_to 'Delete', tweet, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
            </p>
          </div>
        </div>
      </div>
    <%end%>
  </dl>
</div>